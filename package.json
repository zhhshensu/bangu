{
  "name": "bangu",
  "appId": "com.bangu",
  "version": "1.0.0",
  "description": "",
  "homepage": "",
  "main": "dist/main/index.js",
  "private": true,
  "author": {
    "name": "zhh",
    "email": "zshen049@gmail.com"
  },
  "scripts": {
    "dev": "vite --port 5175",
    "dev:debug": "vite -d",
    "dev:debug:force": "vite -d --force",
    "build": "npm run build:pre && electron-builder --config=buildAssets/builder/config.js",
    "build:pre": "npm run clean && vite build",
    "build:all": "npm run build:pre && electron-builder --config=buildAssets/builder/config.js -wml",
    "build:dir": "npm run build:pre && electron-builder --config=buildAssets/builder/config.js --dir",
    "build:mac": "npm run build:pre && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config=buildAssets/builder/config.js --mac",
    "build:linux": "npm run build:pre && electron-builder --config=buildAssets/builder/config.js --linux",
    "build:win": "npm run build:pre && electron-builder --config=buildAssets/builder/config.js --windows",
    "clean": "rimraf dist && rimraf release",
    "lint": "npx @biomejs/biome lint --write --unsafe ./src",
    "test": "npm run build:pre && playwright test",
    "test:linux": "npm run build:pre && xvfb-run --auto-servernum --server-args='-screen 0, 1280x960x24' -- playwright test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@ant-design/icons": "5.x",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.48.1",
    "@supabase/supabase-js": "^2.49.7",
    "@tailwindcss/vite": "^4.1.3",
    "@tanstack/react-router": "^1.120.5",
    "@tanstack/router-cli": "^1.115.2",
    "@tanstack/router-plugin": "^1.120.3",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "add": "^2.0.6",
    "antd": "^5.25.2",
    "autoprefixer": "^10.4.21",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "electron": "^33.4.10",
    "electron-builder": "^25.1.8",
    "electron-extension-installer": "^1.2.0",
    "i18next": "^25.2.0",
    "i18next-resources-for-ts": "^1.6.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.487.0",
    "nanoid": "^5.1.5",
    "playwright": "^1.48.1",
    "pnpm": "^10.11.0",
    "postcss": "^8.5.3",
    "primereact": "^10.9.5",
    "query-string": "^9.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.3",
    "tree-kill": "^1.2.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "overrides": {
    "vite-plugin-electron": {
      "electron": "$electron"
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js",
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  }
}